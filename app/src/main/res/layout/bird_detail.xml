        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chkBoxLoop"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/informacion_sobre_las_aves_de_la_patagonia_informacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagonia_informacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagonia_informacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagoniainformacion_sobre_las_aves_de_la_patagonia"
            android:id="@+id/textView"

            />
    </ScrollView>

